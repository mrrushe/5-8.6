#Q1
for x in range(3):
  print("I love Python!")
  print("I love Computing")

#Q2
letter = input("Please enter a letter: ")
number = int(input("Please enter a number: "))
for i in range(number):
  print(letter)

#Q3
for i in range(10):
  if i%2==0 and i !=0:
    print(i)

#Q4
x=5
y=4
for i in range(x):
  print("*"*y)

#Q5
number = int(input("Please enter a number "))
for i in range(1,number+1):
  print(i**2)

#Q6
string = input("Enter word ")
newstring=""
for letter in range(0,len(string),2):
  newstring=newstring+string[letter]
  print(newstring)

#Q7
word="hello"
for letter in range(len(word)):
  print(word[letter]," has an index of ",letter)

#Q8
word="hello"
newword=""
for i in range(-1,-len(word)-1,-1):
  newword=newword+word[i]
print(newword)

#Q9
word="andrew"
newword=""
for letter in word:
  if letter =="a":
    newword=newword+"z"
  else:
    newword=newword+letter
print(newword)
